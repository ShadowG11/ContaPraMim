<%= form_with model: transaction do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% transaction.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :value %><br>
    <%= form.number_field :value, min: 0.01, step: 0.01 %><br>
    <% transaction.errors.full_messages_for(:value).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :category %><br>
    <%= form.select :category, ['income', 'spending']%>
    <% transaction.errors.full_messages_for(:category).each do |message| %>
      <div><%= message %></div>
    <% end %>

  </div>

  <div>
    <%= form.label :date %><br>
    <%= form.date_field :date, value: Date.today %><br>
    <% transaction.errors.full_messages_for(:date).each do |message| %>
      <div><%= message %></div>
    <% end %>

  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %><br>
    <% transaction.errors.full_messages_for(:description).each do |message| %>
      <div><%= message %></div>
  <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
