<h1><%= @transaction.title %></h1>

<p>Price: <%= @transaction.value %></p>

<p><%= @transaction.date %></p>
<p><%= @transaction.description %></p>

<ul>
  <li><%= link_to "Edit", edit_transaction_path(@transaction) %></li>
  <li><%= button_to "Destroy", transaction_path(@transaction), method: :delete,
                    data: {
                      turbo_confirm: "Are you sure?"
                    } %>
  </li>
</ul>